<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/detailsInfoContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_alignParentTop="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/detailsInfoImageView"
                android:onClick="photoViewerOnClick"
                android:layout_width="match_parent"
                android:layout_height="270dp"/>
            <TextView
                android:id="@+id/photoCountTextView"
                tool:text="photo"
                android:background="#ccc"
                android:layout_marginTop="-270dp"
                android:paddingHorizontal="7dp"
                android:paddingVertical="2dp"
                android:layout_margin="7dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailsInfoImageView"
            android:layout_marginHorizontal="10dp"
            android:columnCount="2"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/carNameInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="markName"
                android:layout_columnSpan="2"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/cityInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_columnSpan="2"
                tool:text="city"/>
            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/mileage"/>
            <TextView
                android:id="@+id/mileAgeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                tool:text="moleage"/>
            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/bodystyle"/>
            <TextView
                android:id="@+id/carType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                tool:text="carType"/>
            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/engine"/>
            <TextView
                android:id="@+id/engineInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                tool:text="engine"/>
            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/gearbox"/>
            <TextView
                android:id="@+id/gearboxInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                tool:text="gearbox"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_columnSpan="2"
                android:text="@string/description"/>
            <TextView
                android:id="@+id/detailsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_columnSpan="2"
                tool:text="detailsInfo"/>
        </GridLayout>
    </LinearLayout>
    </ScrollView>
        <GridLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/priceInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:layout_column="0"
                tool:text="price"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/priceUahInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:layout_column="0"
                tool:text="priceUah"
                android:textSize="17sp"/>
            <Button
                android:id="@+id/openRiaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:paddingHorizontal="20dp"
                android:background="@drawable/param_button"
                android:layout_gravity="end|center_vertical"
                android:layout_rowSpan="2"
                android:text="@string/open_in_ria"/>
        </GridLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="0.2"
        android:scaleY="0.2"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <include
        layout="@layout/empty_stab_layout"
        android:id="@+id/emptyStab"
        android:visibility="gone"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="17dp"
            android:text="Тип кузова:"/>
        <Button
            android:id="@+id/buttonSelectBodystyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingStart="15dp"
            android:text="Bodystyle"
            android:onClick="bodystyleClick"
            android:textAlignment="viewStart"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="17dp"
            android:text="Выберите марку:"/>
        <Button
            android:id="@+id/buttonSelectMark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingStart="15dp"
            android:text="Mark"
            android:onClick="marksClick"
            android:textAlignment="viewStart"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="17dp"
            android:text="Выберите модель:"/>
        <Button
            android:id="@+id/buttonSelectModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingStart="15dp"
            android:text="model"
            android:onClick="modelsClick"
            android:textAlignment="viewStart"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="17dp"
            android:text="Выберите область:"/>
        <Button
            android:id="@+id/buttonSelectStates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingStart="15dp"
            android:text="State"
            android:onClick="statesClick"
            android:textAlignment="viewStart"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="17dp"
            android:text="Выберите город:"/>
        <Button
            android:id="@+id/buttonSelectCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingStart="15dp"
            android:text="City"
            android:onClick="citiesClick"
            android:textAlignment="viewStart"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="8">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="8"
            android:padding="10dp"
            android:textSize="17dp"
            android:text="Цена: $"/>
        <TextView
            android:text="от:"
            android:textSize="17dp"
            android:padding="10dp"
            android:layout_columnWeight="0"/>
        <EditText
            android:id="@+id/priceFromEditText"
            android:inputType="numberSigned"
            android:layout_columnWeight="1"
            android:maxLength="12"
            android:ems="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="до:"
            android:textSize="17dp"
            android:padding="10dp"
            android:layout_columnWeight="0"/>
        <EditText
            android:id="@+id/priceToEditText"
            android:inputType="numberSigned"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:maxLength="12"
            android:layout_marginEnd="10dp"
            android:ems="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="8"
                android:padding="10dp"
                android:textSize="17dp"
                android:text="Год выпуска:"/>
            <TextView
                android:text="от:"
                android:textSize="17dp"
                android:padding="10dp"
                android:layout_columnWeight="0"/>
            <EditText
                android:id="@+id/yearFromEditText"
                android:inputType="numberSigned"
                android:layout_columnWeight="1"
                android:maxLength="4"
                android:ems="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="до:"
                android:textSize="17dp"
                android:padding="10dp"
                android:layout_columnWeight="0"/>
            <EditText
                android:id="@+id/yearToEditText"
                android:inputType="numberSigned"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:maxLength="4"
                android:layout_marginEnd="10dp"
                android:ems="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="8"
                android:padding="10dp"
                android:textSize="17dp"
                android:text="Пробег: км"/>
            <TextView
                android:text="от:"
                android:textSize="17dp"
                android:padding="10dp"
                android:layout_columnWeight="0"/>
            <EditText
                android:id="@+id/raceFromEditText"
                android:inputType="numberSigned"
                android:layout_columnWeight="1"
                android:maxLength="8"
                android:ems="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="до:"
                android:textSize="17dp"
                android:padding="10dp"
                android:layout_columnWeight="0"/>
            <EditText
                android:id="@+id/raceToEditText"
                android:inputType="numberSigned"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:maxLength="8"
                android:layout_marginEnd="10dp"
                android:ems="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </GridLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="17dp"
            android:text="Тип коробки:"/>
        <Button
            android:id="@+id/buttonSelectGearbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingStart="15dp"
            android:text="Gearbox"
            android:onClick="gearboxesClick"
            android:textAlignment="viewStart"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="17dp"
            android:text="Тип топлива:"/>
        <Button
            android:id="@+id/buttonSelectFuelType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingStart="15dp"
            android:text="FuelType"
            android:onClick="fuelTypeClick"
            android:textAlignment="viewStart"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="8"
                android:padding="10dp"
                android:textSize="17dp"
                android:text="Объём двигателя: л"/>
            <TextView
                android:text="от:"
                android:textSize="17dp"
                android:padding="10dp"
                android:layout_columnWeight="0"/>
            <EditText
                android:id="@+id/engineFromEditText"
                android:inputType="numberDecimal"
                android:layout_columnWeight="1"
                android:maxLength="4"
                android:ems="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="до:"
                android:textSize="17dp"
                android:padding="10dp"
                android:layout_columnWeight="0"/>
            <EditText
                android:id="@+id/engineToEditText"
                android:inputType="numberDecimal"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:maxLength="4"
                android:layout_marginEnd="10dp"
                android:ems="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </GridLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"/>
        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="searchClick"
            android:text="Search"/>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:id="@+id/contentLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="@string/bodystyle"/>
            <Button
                android:id="@+id/buttonSelectBodystyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/param_button"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/textColor"
                android:paddingStart="15dp"
                android:text="@string/all_param"
                android:textSize="17sp"
                android:onClick="bodystyleClick"
                android:textAlignment="viewStart"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/itemBorderColor"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="@string/mark"/>
            <Button
                android:id="@+id/buttonSelectMark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/param_button"
                android:textColor="@color/textColor"
                android:layout_marginHorizontal="10dp"
                android:paddingStart="15dp"
                android:textSize="17sp"
                android:text="@string/all_param"
                android:onClick="marksClick"
                android:textAlignment="viewStart"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/itemBorderColor"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="@string/model"/>
            <Button
                android:id="@+id/buttonSelectModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/param_button"
                android:textColor="@color/textColor"
                android:layout_marginHorizontal="10dp"
                android:paddingStart="15dp"
                android:textSize="17sp"
                android:text="@string/all_param"
                android:onClick="modelsClick"
                android:textAlignment="viewStart"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/itemBorderColor"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="@string/state"/>
            <Button
                android:id="@+id/buttonSelectStates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/param_button"
                android:textColor="@color/textColor"
                android:layout_marginHorizontal="10dp"
                android:paddingStart="15dp"
                android:textSize="17sp"
                android:text="@string/all_param"
                android:onClick="statesClick"
                android:textAlignment="viewStart"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/itemBorderColor"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="@string/city"/>
            <Button
                android:id="@+id/buttonSelectCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/param_button"
                android:textColor="@color/textColor"
                android:layout_marginHorizontal="10dp"
                android:paddingStart="15dp"
                android:textSize="17sp"
                android:text="@string/all_param"
                android:onClick="citiesClick"
                android:textAlignment="viewStart"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/itemBorderColor"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="8">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="8"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:text="@string/price_USD"/>
                <TextView
                    android:text="@string/from"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_columnWeight="0"/>
                <EditText
                    android:id="@+id/priceFromEditText"
                    android:inputType="numberSigned"
                    android:layout_columnWeight="1"
                    android:maxLength="12"
                    android:ems="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/to"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_columnWeight="0"/>
                <EditText
                    android:id="@+id/priceToEditText"
                    android:inputType="numberSigned"
                    android:layout_columnSpan="3"
                    android:layout_columnWeight="1"
                    android:maxLength="12"
                    android:layout_marginEnd="10dp"
                    android:ems="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="8">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="8"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:text="@string/year_of_issue"/>
                <TextView
                    android:text="@string/from"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_columnWeight="0"/>
                <EditText
                    android:id="@+id/yearFromEditText"
                    android:inputType="numberSigned"
                    android:layout_columnWeight="1"
                    android:maxLength="4"
                    android:ems="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/to"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_columnWeight="0"/>
                <EditText
                    android:id="@+id/yearToEditText"
                    android:inputType="numberSigned"
                    android:layout_columnSpan="3"
                    android:layout_columnWeight="1"
                    android:maxLength="4"
                    android:layout_marginEnd="10dp"
                    android:ems="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="8">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="8"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:text="@string/select_mileage"/>
                <TextView
                    android:text="@string/from"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_columnWeight="0"/>
                <EditText
                    android:id="@+id/raceFromEditText"
                    android:inputType="numberSigned"
                    android:layout_columnWeight="1"
                    android:maxLength="8"
                    android:ems="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/to"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_columnWeight="0"/>
                <EditText
                    android:id="@+id/raceToEditText"
                    android:inputType="numberSigned"
                    android:layout_columnSpan="3"
                    android:layout_columnWeight="1"
                    android:maxLength="8"
                    android:layout_marginEnd="10dp"
                    android:ems="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/itemBorderColor"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="@string/gearbox"/>
            <Button
                android:id="@+id/buttonSelectGearbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/param_button"
                android:textColor="@color/textColor"
                android:layout_marginHorizontal="10dp"
                android:paddingStart="15dp"
                android:textSize="17sp"
                android:text="@string/all_param"
                android:onClick="gearboxesClick"
                android:textAlignment="viewStart"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/itemBorderColor"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="@string/fuel_type"/>
            <Button
                android:id="@+id/buttonSelectFuelType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/param_button"
                android:textColor="@color/textColor"
                android:layout_marginHorizontal="10dp"
                android:paddingStart="15dp"
                android:textSize="17sp"
                android:text="@string/all_param"
                android:onClick="fuelTypeClick"
                android:textAlignment="viewStart"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/itemBorderColor"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="8">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="8"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:text="@string/select_engine"/>
                <TextView
                    android:text="@string/from"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_columnWeight="0"/>
                <EditText
                    android:id="@+id/engineFromEditText"
                    android:inputType="numberDecimal"
                    android:layout_columnWeight="1"
                    android:maxLength="4"
                    android:ems="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/to"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_columnWeight="0"/>
                <EditText
                    android:id="@+id/engineToEditText"
                    android:inputType="numberDecimal"
                    android:layout_columnSpan="3"
                    android:layout_columnWeight="1"
                    android:maxLength="4"
                    android:layout_marginEnd="10dp"
                    android:ems="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark"/>
            <Button
                android:id="@+id/buttonSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textAllCaps="false"
                android:background="@drawable/param_button"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="searchClick"
                android:text="@string/search"/>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="0.2"
        android:scaleY="0.2"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <include
        android:id="@+id/emptyStab"
        layout="@layout/empty_stab_layout"
        android:visibility="gone" />
</RelativeLayout>